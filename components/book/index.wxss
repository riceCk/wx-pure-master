/* components/book/book.wxss */
.container {
  position: relative;
  margin-top: 30rpx;
  display: felx;
  flex-direction: column;
  width: 240rpx;
  height: 360rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
}

.container image {
  width: 100%;
  height: 100%;
  border-radius: 2px; 
}

.description {
  position: absolute;
  padding: 5rpx 10rpx 8rpx 15rpx;
  display: flex;
  flex-direction: column;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  font-size: 24rpx;
  border-bottom-right-radius: 2px;
  border-bottom-left-radius: 2px;
  box-sizing: border-box;
}

.title {
  margin: 10rpx 0 0 0;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.author {
  margin: -5rpx 0 10rpx 0;
  font-size: 20rpx;
  color: #999;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.foot {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  font-size: 20rpx;
}

.footer {
  color: #666;
}
