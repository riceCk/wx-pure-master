/* pages/book/book.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.header {
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100rpx;
  box-shadow: 0 0 6rpx 0 #e3e3e3;
  border-top: 2rpx solid #f5f5f5;
  border-bottom: 2rpx solid #f5f5f5;
  background-color: #fff;
  z-index: 99;
}

.box {
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 100rpx;
  width: 700rpx;
  height: 68rpx;
  color: #999;
  background-color: #f5f5f5;
}

.box image {
  width: 28rpx;
  height: 28rpx;
  margin: 0 20rpx -4rpx 0;
}


.sub-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
  margin-top: 100rpx;
}

.head-img {
  width: 106rpx;
  height: 34rpx;
  margin-top: 40rpx;
}

.book-container {
  margin-top: 10rpx;
  padding: 0 90rpx 0 90rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.book-container k-book {
  margin-bottom: 10rpx;
}